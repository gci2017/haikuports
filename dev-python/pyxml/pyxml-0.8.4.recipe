SUMMARY="Python XML package"
DESCRIPTION="A validating XML parser, an implementation of the \
SAX and DOM programming interfaces, an interface to the Expat parser \
(and the Expat parser itself), and a C helper module that can speed up \
xmllib.py by a factor of 5."
HOMEPAGE="http://pyxml.sourceforge.net/topics/index.html"
COPYRIGHT="2000 Fourthought Inc, USA"
LICENSE="PyXML"
REVISION="2"
SOURCE_URI="https://github.com/actmd/PyXML/archive/$portVersion.tar.gz"
CHECKSUM_SHA256="ea97ec56e1c87464b548e633d5a2b170d2e2a369195fb2fb7cabb2b609a56009"
SOURCE_DIR="PyXML-$portVersion"

ARCHITECTURES="?x86_gcc2 ?x86 ?x86_64"

PROVIDES="
	pyxml = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_PREREQUIRES="
	cmd:python
	cmd:gcc
	"
BUILD_REQUIRES="
	haiku_devel
	"

BUILD()
{
	python setup.py build
}

INSTALL()
{
	echo $prefix
	python setup.py install --root=$prefix
	packageEntries 
}
