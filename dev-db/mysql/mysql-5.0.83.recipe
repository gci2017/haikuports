#CHECKSUM_MD5="051392064a1e32cca5c23a593908b10e"

ARCHITECTURES="?x86_gcc2 ?x86_64"

PROVIDES="
	"
REQUIRES="
	haiku
	"

BUILD_PREREQUIRES="
	readline >= 5.2
	"
BUILD_REQUIRES="
	haiku_devel
	"

BUILD()
{
	cd mysql-5.0.83
	libtoolize --force --install --copy
	aclocal
	autoconf
	./configure --without-readline CFLAGS=-O2 --prefix=`finddir B_COMMON_DIRECTORY`
	make
}

INSTALL()
{
	cd mysql-5.0.83
	make install
}
